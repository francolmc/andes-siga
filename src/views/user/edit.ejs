<%- include('../templates/auth-header') %>
<h1>Editar usuarios</h1>
<form method="post" action="/user/<%= id %>/edit?_method=PUT">
    <input type="hidden" name="_method" value="PUT">
    <label for="email">Email</label>
    <input type="text" name="email" id="email"><br>
    <label for="firstName">Nombres:</label>
    <input type="text" name="firstName" id="firstName" value="<%= data.firstName %>"> <br>
    <label for="lastName">Apellidos:</label>
    <input type="text" name="lastName" id="lastName" value="<%= data.lastName %>"> <br>
    <label for="password">Password</label>
    <input type="password" name="password" id="password">
    <input type="submit" value="Guardar"> <br>
    <a href="/user">Regresar a la lista</a>
</form>
<%- include('../templates/footer') %>